@model Luw.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete member</h2>
<hr />
<div>
    <h4>Are you sure you want to delete this member?</h4>
    <div class="well">
        <div style="padding-left: 20px">
            <div class="row">
                <label class="col-md-2 control-label">Name</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                </div>
            </div>
            <div class="row">
                <label class="col-md-2 control-label">Address</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Street1)
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Street2)
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.ZipCode)
                </div>
            </div>
            <div class="row">
                <label class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger"><i class="fa fa-close"></i> Delete</button>
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </form>
</div>
