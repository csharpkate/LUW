@model IEnumerable<Luw.Models.ChapterViewModels.IndexViewModel>

@{
    ViewData["Title"] = "Chapter List";
}

<h2>Chapters</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> New</a>    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetingInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(Model => item.Name)</a>
                @*@Html.DisplayFor(modelItem => item.Name)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingInfo)
            </td>
        </tr>
}
    </tbody>
</table>
